<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffdfeaf1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:id="@+id/textViewAppTitle"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/abc_text_size_title_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strSpotifyStreamer"
            android:id="@+id/button"
            android:layout_marginTop="18dp"
            android:background="#F08C35"
            android:onClick="sendMessage"
            android:layout_below="@+id/textViewAppTitle"
            android:layout_centerHorizontal="true"
            android:width="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strScoresApp"
            android:id="@+id/button2"
            android:layout_marginTop="19dp"
            android:background="#F08C35"
            android:onClick="sendMessage"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:width="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strLibraryApp"
            android:id="@+id/button3"
            android:background="#F08C35"
            android:onClick="sendMessage"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:width="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strBuildItBigger"
            android:id="@+id/button4"
            android:layout_marginTop="18dp"
            android:background="#F08C35"
            android:onClick="sendMessage"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
            android:width="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strXyzReader"
            android:id="@+id/button5"
            android:layout_marginTop="21dp"
            android:background="#F08C35"
            android:onClick="sendMessage"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:width="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strCapstone"
            android:id="@+id/button6"
            android:background="#d50000"
            android:onClick="sendMessage"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:width="200dp" />

    </RelativeLayout>
</ScrollView>