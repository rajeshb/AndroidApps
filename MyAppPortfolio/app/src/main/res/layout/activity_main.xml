<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffdfeaf1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:id="@+id/text_app_title"
            android:textSize="@dimen/abc_text_size_title_material" />

        <Button
            android:text="@string/spotify_streamer"
            android:id="@+id/btn_spotify_streamer"
            style="@style/ButtonStyle"/>

        <Button
            android:text="@string/scores_app"
            android:id="@+id/btn_scores_app"
            style="@style/ButtonStyle"/>

        <Button
            android:text="@string/library_app"
            android:id="@+id/btn_library_app"
            style="@style/ButtonStyle"/>

        <Button
            android:text="@string/build_it_bigger"
            android:id="@+id/btn_build_it_bigger"
            style="@style/ButtonStyle"/>

        <Button
            android:text="@string/xyz_reader"
            android:id="@+id/btn_xyz_reader"
            style="@style/ButtonStyle"/>

        <Button
            android:text="@string/capstone"
            android:id="@+id/btn_capstone"
            android:background="#d50000"
            style="@style/ButtonStyle"/>

    </LinearLayout>
</ScrollView>